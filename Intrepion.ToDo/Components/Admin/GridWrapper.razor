<CascadingValue Value="this" IsFixed="true">
    @ChildContent
</CascadingValue>

@code {
    // Renders whatever is inside the tags and cascades a copy of itself.
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    // Call when the filter has changed to refresh the entity list.
    [Parameter]
    public EventCallback FilterChanged { get; set; }

    // Call when a entity is requested to be deleted.
    [Parameter]
    public EventCallback<Guid> DeleteRequested { get; set; }

    // The id of the ApplicationUser to be deleted.
    public Guid DeleteRequestId { get; set; }
}
