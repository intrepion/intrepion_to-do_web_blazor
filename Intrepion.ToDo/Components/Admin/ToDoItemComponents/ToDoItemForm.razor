<h1>@Mode ToDoItem</h1>

<hr />
@if (ToDoItem is not null)
{
    <EditForm Model="ToDoItem" OnInvalidSubmit="(async () => await HandleSubmitAsync(false))" OnValidSubmit="(async () => await HandleSubmitAsync(true))">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <h2>Is Completed?</h2>
        <p>
            <label>
                Is Completed?:
                <InputCheckbox @bind-Value="ToDoItem.IsCompleted" @oninput="HandleIsCompletedChange"/>
                <ConcurrencyField Model="ToDoItem" DbModel="DbToDoItem" Property="obj => obj?.IsCompleted" />
            </label>
        </p>
        <h2>Ordering</h2>
        <p>
            <label>
                Ordering:
                <InputNumber @bind-Value="ToDoItem.Ordering" @oninput="HandleOrderingChange"/>
                <ConcurrencyField Model="ToDoItem" DbModel="DbToDoItem" Property="obj => obj?.Ordering" />
            </label>
        </p>
        <h2>Title</h2>
        <p>
            <label>
                Title:
                <InputText @bind-Value="ToDoItem.Title" @oninput="HandleTitleChange"/>
                <ConcurrencyField Model="ToDoItem" DbModel="DbToDoItem" Property="obj => obj?.Title" />
            </label>
        </p>
        @* PropertyFormCodePlaceholder *@

        <br />
        <button type="button" disabled="@Busy" class="btn btn-warning" @onclick="CancelAsync">
            Cancel
        </button>&nbsp;
        <button disabled="@Busy" type="submit" class="btn btn-primary">
            Submit
        </button>
    </EditForm>
}

@code {
    // Let parent handle result of validation.
    [Parameter]
    public EventCallback<bool> ValidationResult { get; set; }

    // Let parent handle what to do on cancel.
    [Parameter]
    public EventCallback CancelRequest { get; set; }

    // True if add mode.
    [Parameter]
    public bool IsAdd { get; set; }

    // The ToDoItem to upsert.
    [Parameter]
    public ToDoItem? ToDoItem { get; set; }

    // The database version of ToDoItem if a concurrency issue.
    [Parameter]
    public ToDoItem? DbToDoItem { get; set; }

    // Prevent multiple asynchronous operations at the same time.
    [Parameter]
    public bool Busy { get; set; }

    // Mode.
    private string Mode => IsAdd ? "Add" : "Edit";

    // Ask to cancel.
    private async Task CancelAsync() => await CancelRequest.InvokeAsync(null);

    // Handle form submission request.
    // isValid: True when field validation passed.
    private async Task HandleSubmitAsync(bool isValid) => await ValidationResult.InvokeAsync(isValid);

