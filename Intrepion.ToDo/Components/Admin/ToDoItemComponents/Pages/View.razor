@page "/admin/to-do-item/view/{ToDoItemId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>To Do Item View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">To Do Item with that id doesn't exist.</div>
}
else
{
    @if (ToDoItem is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <h1>@ToDoItem.Id</h1>
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the To Do Item.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@ToDoItem.Id</h3>
        <br />

        <h2>Title</h2>
        <br />
        <h3>@ToDoItem.Title</h3>
        <br />
        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/to-do-item/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/to-do-item/edit/@ToDoItem.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This To Do Item has been deleted.</div>
        }
    }
}

@code {
    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of To Do Item.
    [Parameter]
    public Guid ToDoItemId { get; set; }

    // Navigation check.
    private Guid _lastToDoItemId;

    // True with redirect from successful edit.
    [Parameter]
    public bool EditSuccess { get; set; }

    // ToDoItem entity.
    private ToDoItem? ToDoItem { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Set to true when delete is requested.
    private bool ShowConfirmation = false;

    // Set to true when delete is successful.
    private bool Deleted = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {
        if (_lastToDoItemId != ToDoItemId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastToDoItemId = ToDoItemId;
            await LoadToDoItemAsync();
        }
    }

    // Confirm deletion.
    // result is True when user confirmed.
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    // Loads the To Do Item.
    private async Task LoadToDoItemAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        ToDoItem = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.ToDoItems is not null)
        {
            ToDoItem = await context.ToDoItems
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    c => c.Id == ToDoItemId);

            if (ToDoItem is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    // Deletes the To Do Item.
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            // Avoid concurrent requests.
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.ToDoItems
                .SingleOrDefaultAsync(c => c.Id == ToDoItemId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.ToDoItems?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                // Show not found.
                await LoadToDoItemAsync();
            }
        }
        else
        {
            Loading = false;
            // Show not found.
            await LoadToDoItemAsync();
        }
    }
}
