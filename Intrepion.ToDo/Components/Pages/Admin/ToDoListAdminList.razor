@page "/admin/to-do-list-list"
@rendermode InteractiveServer
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject IToDoListAdminRepository ToDoListAdminRepository
@attribute [StreamRendering]
@attribute [Authorize(Roles = "Admin")]

<PageTitle>To Do List List</PageTitle>

<section>
  <h1>To Do List List</h1>
  <article>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Id</th>

          <th scope="col">To Do Items</th>
              <th scope="col">Title</th>
              @* ListHeaderCodePlaceholder *@

          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        @if (toDoListsAdminDto == null)
        {
          <tr>
            <td colspan="4">Loading...</td>
            @* LoadingCountCodePlaceholder *@
          </tr>
        }
        else if (toDoListsAdminDto.Count == 0)
        {
          <tr>
            @* ZeroCountCodePlaceholder *@
          </tr>
        }
        else
        {
          @foreach (var toDoListAdminDto in toDoListsAdminDto)
          {
            <tr>
              <td>@toDoListAdminDto.Id</td>

              <td>
                @if (toDoList?.ToDoItems != null)
                {
                  var first = true;
                  foreach (var x in toDoList.ToDoItems)
                  {
                    if (first)
                    {
                      first = false;
                    }
                    else
                    {
                      <span>, </span>
                    }
                    <span>@x?.Title</span>
                  }
                }
              </td>
              <td>@toDoListAdminDto?.Title</td>
              @* ListItemCodePlaceholder *@

              <td>
                <a href="@("/admin/to-do-list-edit/" + toDoListAdminDto?.Id)">Edit</a>
              </td>
            </tr>
          }
        }
      </tbody>
    </table>
    <a href="/admin/to-do-list-edit">Create</a>
  </article>
</section>

@code {
  List<ToDoListAdminDto>? toDoListsAdminDto = null;

  protected override async Task OnInitializedAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    toDoListsAdminDto = await ToDoListAdminRepository.GetAllAsync(userName);
  }
}
