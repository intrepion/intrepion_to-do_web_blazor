@page "/admin/UrlNamePlaceholder-list"
@rendermode InteractiveServer
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject IToDoListAdminService ToDoListAdminService
@attribute [StreamRendering]

<section>
    <h1>To Do List List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    @* ListHeaderCodePlaceholder *@
                    @* <th scope="col">Title</th>
                    <th scope="col">ToDoList</th> *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (TableLowercaseNamePlaceholder == null)
                {
                    <tr>
                        @* LoadingCountCodePlaceholder *@
                        @* <td colspan="4">Loading...</td> *@
                    </tr>
                }
                else if (TableLowercaseNamePlaceholder.Count == 0)
                {
                    <tr>
                        @* ZeroCountCodePlaceholder *@
                        @* <td colspan="4">No to do items found.</td> *@
                    </tr>
                }
                else
                {
                    @foreach (var toDoList in TableLowercaseNamePlaceholder)
                    {
                        <tr>
                            <td>@toDoList.Id</td>
                            @* ListItemCodePlaceholder *@
                            @* <td>@toDoList.Title</td>
                            <td>@toDoList.ToDoList?.Title</td> *@
                            <td>
                                <a href="@("/admin/UrlNamePlaceholder-edit/" + toDoList.Id)">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a href="/admin/UrlNamePlaceholder-edit">Create</a>
    </article>
</section>

@code {
    List<ToDoList>? TableLowercaseNamePlaceholder = null;

    protected override async Task OnInitializedAsync()
    {
        var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
        var userName = authState.User.Identity?.Name;

        if (userName == null)
        {
            return;
        }

        TableLowercaseNamePlaceholder = await ToDoListAdminService.GetAllAsync(userName);
    }
}
