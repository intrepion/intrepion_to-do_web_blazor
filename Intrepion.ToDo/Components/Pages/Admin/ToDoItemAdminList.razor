@page "/admin/to-do-item-list"
@rendermode InteractiveServer
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject IToDoItemAdminRepository ToDoItemAdminRepository
@attribute [StreamRendering]
@attribute [Authorize(Roles = "Admin")]

<PageTitle>To Do Item List</PageTitle>

<section>
  <h1>To Do Item List</h1>
  <article>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Id</th>

          <th scope="col">IsCompleted</th>
              <th scope="col">Ordering</th>
              <th scope="col">To Do List</th>
              <th scope="col">Title</th>
              @* ListHeaderCodePlaceholder *@

          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        @if (toDoItemsAdminDto == null)
        {
          <tr>
            <td colspan="6">Loading...</td>
            @* LoadingCountCodePlaceholder *@
          </tr>
        }
        else if (toDoItemsAdminDto.Count == 0)
        {
          <tr>
            <td colspan="6">No to do items found.</td>
            @* ZeroCountCodePlaceholder *@
          </tr>
        }
        else
        {
          @foreach (var toDoItemAdminDto in toDoItemsAdminDto)
          {
            <tr>
              <td>@toDoItemAdminDto.Id</td>

              <td>@toDoItemAdminDto?.IsCompleted</td>
              <td>@toDoItemAdminDto?.Ordering</td>
              <td>@toDoItem?.ToDoList?.Title</td>
              <td>@toDoItemAdminDto?.Title</td>
              @* ListItemCodePlaceholder *@

              <td>
                <a href="@("/admin/to-do-item-edit/" + toDoItemAdminDto?.Id)">Edit</a>
              </td>
            </tr>
          }
        }
      </tbody>
    </table>
    <a href="/admin/to-do-item-edit">Create</a>
  </article>
</section>

@code {
  List<ToDoItemAdminDto>? toDoItemsAdminDto = null;

  protected override async Task OnInitializedAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    toDoItemsAdminDto = await ToDoItemAdminRepository.GetAllAsync(userName);
  }
}
