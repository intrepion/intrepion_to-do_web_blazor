# /docker/Dockerfile.init
# Uses .NET SDK image for project initialization
FROM mcr.microsoft.com/dotnet/sdk:8.0
WORKDIR /app
COPY init.sh .
# Install dos2unix and convert line endings
RUN apt-get update && \
    apt-get install -y dos2unix && \
    dos2unix init.sh && \
    chmod +x init.sh
ENTRYPOINT ["/bin/bash", "init.sh"]
