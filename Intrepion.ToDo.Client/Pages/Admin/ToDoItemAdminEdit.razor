            <div class="row">
                <div class="col">
                    @if (!Id.Equals(Guid.Empty))
                    {
                        <button @onclick="Remove" type="button" class="btn btn-danger">Remove</button>
                    }
                </div>
                <div class="col">
                    <a href="/admin/to-do-item-list">Cancel</a>
                    @if (Id.Equals(Guid.Empty))
                    {
                        <button type="submit" class="btn btn-primary">Create</button>
                    }
