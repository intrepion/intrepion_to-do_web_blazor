  {
    <PageTitle>To Do Item Creation</PageTitle>
  }
  else
  {
    <PageTitle>To Do Item Modification</PageTitle>
  }

<section>
  @if (Id.Equals(Guid.Empty))
  {
    <h1>To Do Item Creation</h1>
  }
  else
  {
